<% extend('partials/layout') %>
  <form method="post" action="submitLogin">
    <div class="steps" id="stepsDemo">
      <div class="columns">
        <div class="column">Auto</div>
        <div class="steps-content column is-half">
          <div class="step-content has-text-centered is-active">
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Username</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <input class="input" name="username" id="username" type="text" placeholder="Username" autofocus data-validate="require">
                  </div>
                </div>
              </div>
            </div>
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Password</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control has-icon has-icon-right">
                    <input class="input" type="password" name="password" id="password" placeholder="Password" data-validate="require">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="control">
            <button class="button is-link s-outlined">Login</button>
          </div>
        </div>
        <div class="column">Auto</div>
      </div>
    </div>
  </form>
