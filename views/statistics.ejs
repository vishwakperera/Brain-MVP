            }
          }],
          yAxes: [{
            display: true,
            scaleLabel: {
              display: true,
              labelString: 'Points'
            }
          }]
        }
      }
    });
  </script>

  <!-- Chart 4 -->
  <script>
		var barChartData = {
			labels: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Satureday"],
			datasets: [{
				label: 'JavaScripts',
				backgroundColor: 'rgba(255, 99, 132, 1)',
				data: [3,4,5,6,4,3]
			}, {
				label: 'SCSS',
				backgroundColor: 'rgba(54, 162, 235, 1)',
				data: [4,2,6,7,2,4]
			}, {
				label: 'EJS',
				backgroundColor: 'rgba(154, 12, 235, 1)',
				data: [4,5,3,7,5,9]
			}]

		};
		window.onload = function() {
			var ctx = document.getElementById('myChart4').getContext('2d');
			window.myBar = new Chart(ctx, {
				type: 'bar',
				data: barChartData,
				options: {
					title: {
						display: false,
						text: 'Chart.js Bar Chart - Stacked'
					},
					tooltips: {
						mode: 'index',
						intersect: false
					},
					responsive: true,
					scales: {
						xAxes: [{
							stacked: true,
						}],
						yAxes: [{
							stacked: true
						}]
					}
				}
			});
		};
  </script>
